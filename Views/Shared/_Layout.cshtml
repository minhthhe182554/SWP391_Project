@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SWP391_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SWP391_Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user-dropdown.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body style="display: flex; flex-direction: column; min-height: 100vh;">
    @if (ViewData["HideLayoutChrome"] == null)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/imgs/ic_ezjob.png" alt="EZJob" style="height: 60px;" />
                        <span style="font-weight: 600;">EZJob</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        @if (HttpContextAccessor.HttpContext.Session.GetString("Email") == null)
                        {
                            <ul class="navbar-nav d-flex align-items-center gap-2">
                                <li class="nav-item">
                                    <a class="btn btn-outline-success text-decoration-none" style="border-radius: 50px; padding: 0.5rem 1.5rem; border: 2px solid #28a745; color: #28a745; background-color: white; font-weight: 500; transition: all 0.15s ease-in-out;" 
                                       onmouseover="this.style.backgroundColor='#28a745'; this.style.color='white';" 
                                       onmouseout="this.style.backgroundColor='white'; this.style.color='#28a745';"
                                       asp-controller="Account" asp-action="Login">Đăng nhập</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn text-white text-decoration-none" style="border-radius: 50px; padding: 0.5rem 1.5rem; background-color: #28a745; border: 2px solid #28a745; font-weight: 500; transition: all 0.15s ease-in-out;" 
                                       onmouseover="this.style.backgroundColor='#218838'; this.style.borderColor='#218838';" 
                                       onmouseout="this.style.backgroundColor='#28a745'; this.style.borderColor='#28a745';"
                                       asp-controller="Account" asp-action="Register">Đăng ký</a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="navbar-nav d-flex align-items-center">
                                <li class="nav-item dropdown">
                                    @await Component.InvokeAsync("UserDropdown")
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </nav>
        </header>
    }
    <main role="main" style="flex: 1; padding-bottom: 2rem;">
        @RenderBody()
    </main>

    @if (ViewData["HideLayoutChrome"] == null)
    {
        <footer class="border-top footer text-muted" style="background-color: #f8f9fa; padding: 1.5rem 0 0.75rem 0; margin-top: 2rem; position: static; width: auto; line-height: normal;">
            <div class="container">
                <div class="row mb-2">
                    <div class="col-md-12">
                        <h6 style="color: #28a745; font-weight: 600; margin-bottom: 0.5rem; font-size: 0.95rem;">Dự án môn SWP391</h6>
                        <h5 style="color: #495057; font-weight: 700; margin-bottom: 0.75rem; font-size: 1.1rem;">TÊN DỰ ÁN: EZJOB</h5>
                        <div style="color: #6c757d; line-height: 1.6; font-size: 0.875rem;">
                            <div style="margin-bottom: 0.4rem;">
                                <i class="fas fa-map-marker-alt" style="color: #28a745; margin-right: 0.5rem; font-size: 0.875rem;"></i>
                                <span>Địa điểm: Đại học FPT cơ sở Hoà Lạc, Hà Nội</span>
                            </div>
                            <div style="margin-bottom: 0.4rem;">
                                <i class="fas fa-phone" style="color: #28a745; margin-right: 0.5rem; font-size: 0.875rem;"></i>
                                <span>Số điện thoại: 0852325683</span>
                            </div>
                            <div>
                                <i class="fas fa-envelope" style="color: #28a745; margin-right: 0.5rem; font-size: 0.875rem;"></i>
                                <span>Email: <a href="mailto:kakassj25@gmail.com" style="color: #28a745; text-decoration: none;">kakassj25@gmail.com</a></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center" style="padding-top: 0.75rem; border-top: 1px solid #dee2e6; margin-top: 0.75rem;">
                        <p style="margin: 0; color: #6c757d; font-size: 0.875rem;">© 2025 EZJob. All rights reserved.</p>
                    </div>
                </div>
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
