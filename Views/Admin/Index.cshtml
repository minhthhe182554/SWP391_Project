@model SWP391_Project.ViewModels.AdminDashboardVM
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Dashboard - Quản trị viên";
    var primaryColor = "#6c757d";
}

<div class="container mt-4">
    <h1 class="mb-4" style="color: @primaryColor; font-size: 2rem; font-weight: bold;">Dashboard Quản trị</h1>
    
    <div class="row">
        <div class="col-md-3 mb-3">
            <div class="card" style="border-radius: 10px; border: 1px solid #ced4da;">
                <div class="card-body">
                    <h5 class="card-title">Tổng số người dùng</h5>
                    <h2 class="card-text">@Model.TotalUsers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card" style="border-radius: 10px; border: 1px solid #ced4da;">
                <div class="card-body">
                    <h5 class="card-title">Ứng viên</h5>
                    <h2 class="card-text">@Model.TotalCandidates</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card" style="border-radius: 10px; border: 1px solid #ced4da;">
                <div class="card-body">
                    <h5 class="card-title">Công ty</h5>
                    <h2 class="card-text">@Model.TotalCompanies</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card" style="border-radius: 10px; border: 1px solid #ced4da;">
                <div class="card-body">
                    <h5 class="card-title">Công việc</h5>
                    <h2 class="card-text">@Model.TotalJobs</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card" style="border-radius: 10px; border: 1px solid #ced4da;">
                <div class="card-body">
                    <h5 class="card-title">Ứng tuyển</h5>
                    <h2 class="card-text">@Model.TotalApplications</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card" style="border-radius: 10px; border: 1px solid #ced4da;">
                <div class="card-body">
                    <h5 class="card-title">Báo cáo</h5>
                    <h2 class="card-text">@Model.TotalReports</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card" style="border-radius: 10px; border: 1px solid #dc3545;">
                <div class="card-body">
                    <h5 class="card-title" style="color: #dc3545;">Báo cáo chờ xử lý</h5>
                    <h2 class="card-text" style="color: #dc3545;">@Model.PendingReports</h2>
                </div>
            </div>
        </div>
    </div>
</div>
