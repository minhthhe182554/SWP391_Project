@model SWP391_Project.ViewModels.CompanyDashboardVM
@{
    Layout = "_LayoutCompany";
    ViewData["Title"] = "Dashboard - Nhà tuyển dụng";
    var primaryColor = "#2f80ed";
}

<div class="container mt-4">
    <h1 class="mb-4" style="color: @primaryColor; font-size: 2rem; font-weight: bold;">Dashboard</h1>
    
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card" style="border-radius: 10px; border: 1px solid #ced4da;">
                <div class="card-body">
                    <h5 class="card-title" style="color: @primaryColor;">Tổng số công việc</h5>
                    <h2 class="card-text">@Model.TotalJobs</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card" style="border-radius: 10px; border: 1px solid #ced4da;">
                <div class="card-body">
                    <h5 class="card-title" style="color: @primaryColor;">Công việc đang hoạt động</h5>
                    <h2 class="card-text">@Model.ActiveJobs</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card" style="border-radius: 10px; border: 1px solid #ced4da;">
                <div class="card-body">
                    <h5 class="card-title" style="color: @primaryColor;">Tổng số ứng viên</h5>
                    <h2 class="card-text">@Model.TotalApplications</h2>
                </div>
            </div>
        </div>
    </div>
</div>
