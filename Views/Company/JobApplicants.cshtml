@using SWP391_Project.ViewModels.Company
@model JobApplicantsVM

@{
    ViewData["Title"] = "Danh sách ứng viên";
    Layout = "_LayoutCompany";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-0">Danh sách ứng viên</h4>
            <p class="text-muted mt-1">
                Công việc: <strong class="text-primary">@Model.JobTitle</strong>
            </p>
        </div>

        <div>
            <a asp-action="ExportApplicants" asp-route-id="@Model.JobId" class="btn btn-success me-2">
                <i class="fas fa-file-excel me-2"></i> Xuất Excel
            </a>

            <a asp-action="ManageJobs" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Tên ứng viên</th>
                            <th>Email / Liên hệ</th>
                            <th>Ngày nộp</th>
                            <th>CV & Thư</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Applicants != null && Model.Applicants.Any())
                        {
                            foreach (var app in Model.Applicants)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <img src="@(string.IsNullOrEmpty(app.AvatarUrl) ? "/imgs/default_avatar.png" : app.AvatarUrl)"
                                                 class="rounded-circle me-3" width="40" height="40" style="object-fit: cover;">
                                            <span class="fw-bold">@app.FullName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div>@app.Email</div>
                                        <small class="text-muted">@app.PhoneNumber</small>
                                    </td>
                                    <td>@app.ApplyDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <div class="d-flex flex-column gap-1">
                                            <a href="" target="_blank" class="text-decoration-none">
                                                <i class="fas fa-file-pdf text-danger me-1"></i> Xem CV
                                            </a>
                                            @if (!string.IsNullOrEmpty(app.CoverLetter))
                                            {
                                                <span class="text-muted small" title="@app.CoverLetter">
                                                    <i class="fas fa-envelope-open-text me-1"></i> Xem thư
                                                </span>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-end pe-4">
                                        <button class="btn btn-sm btn-outline-primary">Chi tiết</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="fas fa-user-slash fa-3x mb-3"></i>
                                    <p>Chưa có ứng viên nào nộp hồ sơ cho công việc này.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>