@model List<SWP391_Project.ViewModels.Job.ManageJobsVM>

@{
    ViewData["Title"] = "Quản lý tin tuyển dụng";
    Layout = "_LayoutCompany";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold mb-0">Quản lý tin tuyển dụng</h4>

        <div class="d-flex align-items-center gap-2">

            <form method="get" asp-action="ManageJobs" class="d-flex align-items-center">
                <span class="me-2 text-muted"><i class="fas fa-filter"></i></span>

                <select name="status" class="form-select form-select-sm" onchange="this.form.submit()" style="width: 160px;">
                    <!option value="all" @(ViewBag.CurrentStatus == "all" ? "selected" : "")>Tất cả trạng thái</!option>
                    <!option value="active" @(ViewBag.CurrentStatus == "active" ? "selected" : "")>Đang tuyển</!option>
                    <!option value="expired" @(ViewBag.CurrentStatus == "expired" ? "selected" : "")>Đã hết hạn</!option>
                </select>
            </form>

            <a asp-action="PostJob" class="btn btn-success btn-sm">
                <i class="fas fa-plus me-1"></i> Đăng tin mới
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Tiêu đề công việc</th>
                            <th>Ngày đăng</th>
                            <th>Hạn nộp</th>
                            <th>Ứng viên</th>
                            <th>Trạng thái</th>
                            <th class="text-center">Ẩn/Hiện</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                @* var rowClass = item.IsDelete ? "opacity-50 bg-light" : ""; *@
                                var rowClass = item.IsDelete ? "bg-light text-muted" : "";

                                <tr class="@rowClass">
                                    <td class="ps-4">
                                        <div class="fw-bold text-dark">@item.Title</div>
                                        <small class="text-muted"><i class="fas fa-map-marker-alt me-1"></i> @item.CityName</small>
                                    </td>
                                    <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-secondary rounded-pill">@item.ApplicationCount</span>
                                    </td>
                                    <td>
                                        @Html.Raw(item.StatusLabel)
                                    </td>

                                    <td class="text-center">
                                        <form asp-action="ToggleVisibility" asp-route-id="@item.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()

                                            @if (item.IsDelete)
                                            {
                                                <button type="submit" class="btn btn-sm btn-warning text-dark fw-bold"
                                                        title="Tin đang ẩn. Nhấn để hiện lại.">
                                                    Hiện lại
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-secondary"
                                                        title="Tin đang hiện. Nhấn để ẩn đi.">
                                                    Ẩn đi
                                                </button>
                                            }
                                        </form>
                                    </td>
                                    <td class="text-end pe-4" style="min-width: 180px;">
                                        <a asp-action="JobApplicants" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1" title="Xem ứng viên">
                                            <i class="fas fa-users"></i>
                                        </a>

                                        @if (!item.IsExpired && !item.IsDelete) 
                                        {
                                            <a href="#" class="btn btn-sm btn-outline-primary me-1" title="Sửa tin">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <form asp-action="StopRecruitment" asp-route-id="@item.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Bạn chắc chắn muốn dừng tuyển dụng sớm?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Dừng tuyển dụng">
                                                    <i class="fas fa-stop-circle"></i>
                                                </button>
                                            </form>
                                        }

                                        @if (item.IsExpired)
                                        {
                                            <form asp-action="RepostJob" asp-route-id="@item.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Đăng lại tin này?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-warning text-dark" title="Đăng lại">
                                                    <i class="fas fa-redo"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="fas fa-folder-open fa-3x mb-3"></i>
                                    <p>Chưa có tin tuyển dụng nào.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>