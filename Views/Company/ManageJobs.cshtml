@model List<SWP391_Project.ViewModels.Job.ManageJobsVM>

@{
    ViewData["Title"] = "Quản lý tin tuyển dụng";
    Layout = "_LayoutCompany";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold mb-0">Quản lý tin tuyển dụng</h4>
        <a asp-action="PostJob" class="btn btn-success">
            <i class="fas fa-plus me-2"></i> Đăng tin mới
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Tiêu đề công việc</th>
                            <th>Ngày đăng</th>
                            <th>Hạn nộp</th>
                            <th>Ứng viên</th>
                            <th>Trạng thái</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-dark">@item.Title</div>
                                        <small class="text-muted"><i class="fas fa-map-marker-alt me-1"></i> @item.CityName</small>
                                    </td>
                                    <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-secondary rounded-pill">@item.ApplicationCount</span>
                                    </td>
                                    <td>
                                        @Html.Raw(item.StatusLabel)
                                    </td>
                                    <td class="text-end pe-4" style="min-width: 200px;">

                                        <a asp-action="JobApplicants"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-info text-white me-1"
                                           title="Xem danh sách ứng viên">
                                            <i class="fas fa-users"></i>
                                        </a>
                                        @if (item.IsExpired)
                                        {
                                            <form asp-action="RepostJob" asp-route-id="@item.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Đăng lại tin này? Tin mới sẽ được tạo.');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-warning text-dark fw-bold shadow-sm" title="Đăng lại tin này">
                                                    <i class="fas fa-redo"></i> Đăng lại
                                                </button>
                                            </form>

                                            <a href="javascript:void(0)"
                                               onclick="alert('Tính năng Xóa đang được phát triển! Vui lòng quay lại sau.');"
                                               class="btn btn-sm btn-outline-danger ms-1"
                                               title="Xóa tin">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            @if (item.ApplicationCount == 0)
                                            {
                                                <a href="javascript:void(0)"
                                                   onclick="alert('Tính năng đang được phát triển! Vui lòng quay lại sau.');"
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="Sửa tin">
                                                    <i class="fas fa-edit"></i> Sửa
                                                </a>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-outline-secondary disabled" title="Không thể sửa vì đã có ứng viên nộp hồ sơ">
                                                    <i class="fas fa-edit"></i> Sửa
                                                </button>
                                            }

                                            <form asp-action="StopRecruitment" asp-route-id="@item.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Bạn chắc chắn muốn dừng tuyển dụng tin này sớm?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger ms-1" title="Dừng tuyển dụng ngay">
                                                    <i class="fas fa-stop-circle"></i> Dừng
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="fas fa-folder-open fa-3x mb-3"></i>
                                    <p>Chưa có tin tuyển dụng nào.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>