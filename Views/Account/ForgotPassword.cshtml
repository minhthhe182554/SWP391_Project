@model SWP391_Project.ViewModels.ForgotPasswordVM
@{
    ViewData["Title"] = "Quên mật khẩu";
    ViewData["HideLayoutChrome"] = true;
    var primaryColor = "#28a745";
}
<style>
    .login-container {
        max-width: 500px;
        margin: 2rem auto;
    }

    .btn-login {
        width: 100%;
        background-color: @primaryColor;
        border: 1px solid @primaryColor;
        color: white;
        padding: 0.75rem;
        border-radius: 0.25rem;
        font-weight: 500;
    }

        .btn-login:hover {
            background-color: #218838;
        }

    .form-control-custom {
        width: 100%;
        padding: 0.75rem 0.75rem 0.75rem 2.5rem;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .input-group-custom {
        position: relative;
        display: flex;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .input-icon {
        position: absolute;
        left: 12px;
        color: @primaryColor;
        z-index: 10;
    }
</style>

<div class="container">
    <div class="login-container">
        <div class="text-center mb-4">
            <h1 style="color: @primaryColor; font-weight: bold;">Quên mật khẩu?</h1>
            <p class="text-muted">Nhập email đăng ký để nhận hướng dẫn khôi phục.</p>
        </div>

        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-3">
                <label class="fw-bold mb-1">Email</label>
                <div class="input-group-custom">
                    <i class="fa fa-envelope input-icon"></i>
                    <input asp-for="Email" class="form-control-custom" placeholder="Nhập email của bạn" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-login">Gửi yêu cầu</button>
        </form>
        <div class="text-center mt-3">
            <a asp-action="Login" style="color: @primaryColor; text-decoration: none;">Quay lại đăng nhập</a>
        </div>
    </div>
</div>