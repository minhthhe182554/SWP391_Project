@model SWP391_Project.ViewModels.ResetPasswordVM
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    ViewData["HideLayoutChrome"] = true;
    var primaryColor = "#28a745";
}
<style>
    .login-container {
        max-width: 500px;
        margin: 2rem auto;
    }

    .btn-login {
        width: 100%;
        background-color: @primaryColor;
        border: 1px solid @primaryColor;
        color: white;
        padding: 0.75rem;
        border-radius: 0.25rem;
        font-weight: 500;
    }

    .form-control-custom {
        width: 100%;
        padding: 0.75rem 0.75rem 0.75rem 2.5rem;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .input-group-custom {
        position: relative;
        display: flex;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .input-icon {
        position: absolute;
        left: 12px;
        color: @primaryColor;
        z-index: 10;
    }
</style>

<div class="container">
    <div class="login-container">
        <div class="text-center mb-4">
            <h1 style="color: @primaryColor; font-weight: bold;">Mật khẩu mới</h1>
            <p class="text-muted">Nhập mật khẩu mới cho tài khoản của bạn.</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <div class="mb-3">
                <label class="fw-bold mb-1">Mật khẩu mới</label>
                <div class="input-group-custom">
                    <i class="fa fa-lock input-icon"></i>
                    <input asp-for="NewPassword" type="password" class="form-control-custom" placeholder="Nhập mật khẩu mới" />
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="fw-bold mb-1">Xác nhận mật khẩu</label>
                <div class="input-group-custom">
                    <i class="fa fa-lock input-icon"></i>
                    <input asp-for="ConfirmPassword" type="password" class="form-control-custom" placeholder="Nhập lại mật khẩu mới" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">Đổi mật khẩu</button>
        </form>
    </div>
</div>