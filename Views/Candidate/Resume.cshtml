@model SWP391_Project.ViewModels.Candidate.CandidateResumeVM
@{
    Layout = "_LayoutCandidate";
    ViewData["Title"] = "Quản lý hồ sơ";
    var primaryColor = ViewData["PrimaryColor"] as string ?? "#28a745";
    var successMessage = ViewData["Success"] as string;
    var errorMessage = ViewData["Error"] as string;
}

<style>
    .resume-wrapper {
        padding: 1rem 0;
    }

    .resume-card {
        background: white;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        padding: 1.25rem;
        margin-bottom: 1.25rem;
    }

    .section-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: @primaryColor;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid @primaryColor;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 0.375rem;
        font-size: 0.875rem;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 6px;
        padding: 0.5rem;
        font-size: 0.875rem;
    }

    .form-control:focus {
        border-color: @primaryColor;
        outline: none;
        box-shadow: 0 0 0 0.15rem rgba(40, 167, 69, 0.25);
    }

    .btn-primary {
        background-color: @primaryColor;
        border: 1px solid @primaryColor;
        color: white;
        padding: 0.5rem 1.5rem;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.875rem;
        transition: background-color 0.15s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #218838;
        border-color: #218838;
    }

    .btn-outline-danger {
        border-radius: 6px;
        padding: 0.375rem 0.75rem;
        font-size: 0.8125rem;
    }

    .resume-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .resume-item {
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        padding: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.75rem;
    }

    .resume-info {
        flex: 1;
    }

    .resume-name {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.25rem;
        font-size: 0.9rem;
    }

    .resume-link {
        font-size: 0.85rem;
        color: @primaryColor;
        text-decoration: none;
    }

    .resume-link:hover {
        text-decoration: underline;
        color: #218838;
    }

    .alert {
        border-radius: 6px;
        font-size: 0.9rem;
    }
</style>

<div class="container resume-wrapper">
    <div class="row">
        <div class="col-lg-8">
            <div class="resume-card">
                <div class="section-title d-flex align-items-center justify-content-between">
                    <span>Danh sách hồ sơ</span>
                    <span class="badge bg-success text-white" style="border-radius: 10px;">@Model.Resumes.Count</span>
                </div>

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success mb-3">@successMessage</div>
                }
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger mb-3">@errorMessage</div>
                }

                @if (!Model.HasResumes)
                {
                    <div class="text-muted" style="font-size: 0.9rem;">Chưa có hồ sơ nào. Vui lòng tải lên PDF.</div>
                }
                else
                {
                    <div class="resume-list">
                        @foreach (var resume in Model.Resumes)
                        {
                            <div class="resume-item">
                                <div class="resume-info">
                                    <div class="resume-name">@resume.Name</div>
                                    <div style="font-size: 0.82rem; color: #6c757d;">@resume.OriginalFileName</div>
                                </div>
                                <div class="d-flex flex-wrap gap-1 justify-content-end" style="min-width: 160px;">
                                    <button type="button" class="btn btn-outline-secondary btn-sm"
                                            data-preview='@Json.Serialize(resume.PreviewUrls)'
                                            data-resume-name="@resume.Name"
                                            onclick="openPreview(this)"
                                            title="Xem">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-primary btn-sm"
                                            data-id="@resume.Id"
                                            data-name="@resume.Name"
                                            onclick="openEditModal(this)"
                                            title="Sửa">
                                        <i class="fas fa-pen"></i>
                                    </button>
                                    <form asp-action="DeleteResume" asp-controller="Candidate" method="post" class="d-inline" onsubmit="return confirm('Xóa hồ sơ này?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@resume.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-4">
            <div class="resume-card">
                <div class="section-title">Tải lên hồ sơ mới</div>

                <form asp-action="UploadResume" asp-controller="Candidate" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label" for="resumeName">Tên hồ sơ (bắt buộc)</label>
                        <input type="text"
                               class="form-control"
                               id="resumeName"
                               name="resumeName"
                               placeholder="VD: Senior Backend CV"
                               required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="resumeFile">Chọn tệp PDF</label>
                        <input type="file"
                               class="form-control"
                               id="resumeFile"
                               name="resumeFile"
                               accept=".pdf"
                               required />
                        <div class="form-text">
                            Tối đa 10MB.
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Tải lên</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Preview Modal -->
<div class="modal fade" id="previewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="previewTitle">Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="previewImage" src="" alt="Preview" style="max-width:100%; max-height:70vh; border:1px solid #dee2e6; border-radius: 6px;" />
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-outline-secondary" id="prevPage" aria-label="Trang trước">←</button>
                    <button type="button" class="btn btn-outline-secondary" id="nextPage" aria-label="Trang sau">→</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh sửa Resume</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editNameForm" asp-action="UpdateResumeName" asp-controller="Candidate" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="editId" />
                    <div class="mb-3">
                        <label class="form-label">Tên Resume</label>
                        <input type="text" class="form-control" name="newName" id="editName" required />
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary btn-sm px-3">Lưu</button>
                    </div>
                </form>
                <hr />
                <form id="editFileForm" asp-action="UpdateResumeFile" asp-controller="Candidate" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="editIdFile" />
                    <div class="mb-3">
                        <label class="form-label">Chọn tệp PDF mới</label>
                        <input type="file" class="form-control" name="resumeFile" accept=".pdf" required />
                        <div class="form-text">Tối đa 10MB.</div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-secondary btn-sm px-3">Tải lên</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    let currentPreviewIndex = 0;
    let currentPreviews = [];
    let editModal;

    function openEditModal(btn) {
        const id = btn.getAttribute('data-id');
        const name = btn.getAttribute('data-name') || '';
        document.getElementById('editId').value = id;
        document.getElementById('editIdFile').value = id;
        document.getElementById('editName').value = name;
        if (!editModal) {
            editModal = new bootstrap.Modal(document.getElementById('editModal'));
        }
        editModal.show();
    }

    async function filterLoaded(previews) {
        const results = await Promise.all(previews.map(url => new Promise(res => {
            const img = new Image();
            img.onload = () => res(url);
            img.onerror = () => res(null);
            img.src = url;
        })));
        return results.filter(Boolean);
    }

    async function openPreview(btn) {
        const data = btn.getAttribute('data-preview');
        const title = btn.getAttribute('data-resume-name') || 'Resume';
        try {
            currentPreviews = JSON.parse(data) || [];
        } catch {
            currentPreviews = [];
        }
        if (!currentPreviews.length) {
            alert('Không có preview khả dụng');
            return;
        }

        // Keep only images that actually load (avoid broken pages when PDF trang < max preview)
        currentPreviews = await filterLoaded(currentPreviews);
        if (!currentPreviews.length) {
            alert('Không thể tải preview cho PDF này');
            return;
        }

        currentPreviewIndex = 0;
        updatePreviewImage();
        document.getElementById('previewTitle').textContent = title;
        const modal = new bootstrap.Modal(document.getElementById('previewModal'));
        modal.show();
    }

    function updatePreviewImage() {
        const img = document.getElementById('previewImage');
        img.src = currentPreviews[currentPreviewIndex];
        document.getElementById('prevPage').disabled = currentPreviewIndex === 0;
        document.getElementById('nextPage').disabled = currentPreviewIndex === currentPreviews.length - 1;
    }

    document.getElementById('prevPage').addEventListener('click', function () {
        if (currentPreviewIndex > 0) {
            currentPreviewIndex--;
            updatePreviewImage();
        }
    });

    document.getElementById('nextPage').addEventListener('click', function () {
        if (currentPreviewIndex < currentPreviews.length - 1) {
            currentPreviewIndex++;
            updatePreviewImage();
        }
    });
</script>
