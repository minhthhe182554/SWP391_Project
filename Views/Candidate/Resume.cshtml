@model SWP391_Project.ViewModels.Candidate.CandidateResumeVM
@{
    Layout = "_LayoutCandidate";
    ViewData["Title"] = "Quản lý hồ sơ";
    var primaryColor = ViewData["PrimaryColor"] as string ?? "#28a745";
    var successMessage = ViewData["Success"] as string;
    var errorMessage = ViewData["Error"] as string;
}

<style>
    .resume-wrapper {
        padding: 1rem 0;
    }

    .resume-card {
        background: white;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        padding: 1.25rem;
        margin-bottom: 1.25rem;
    }

    .section-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: @primaryColor;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid @primaryColor;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 0.375rem;
        font-size: 0.875rem;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 6px;
        padding: 0.5rem;
        font-size: 0.875rem;
    }

    .form-control:focus {
        border-color: @primaryColor;
        outline: none;
        box-shadow: 0 0 0 0.15rem rgba(40, 167, 69, 0.25);
    }

    .btn-primary {
        background-color: @primaryColor;
        border: 1px solid @primaryColor;
        color: white;
        padding: 0.5rem 1.5rem;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.875rem;
        transition: background-color 0.15s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #218838;
        border-color: #218838;
    }

    .btn-outline-danger {
        border-radius: 6px;
        padding: 0.375rem 0.75rem;
        font-size: 0.8125rem;
    }

    .resume-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .resume-item {
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        padding: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.75rem;
    }

    .resume-info {
        flex: 1;
    }

    .resume-name {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.25rem;
        font-size: 0.9rem;
    }

    .resume-link {
        font-size: 0.85rem;
        color: @primaryColor;
        text-decoration: none;
    }

    .resume-link:hover {
        text-decoration: underline;
        color: #218838;
    }

    .alert {
        border-radius: 6px;
        font-size: 0.9rem;
    }
</style>

<div class="container resume-wrapper">
    <div class="row">
        <div class="col-lg-8">
            <div class="resume-card">
                <div class="section-title d-flex align-items-center justify-content-between">
                    <span>Danh sách hồ sơ</span>
                    <span class="badge bg-success text-white" style="border-radius: 10px;">@Model.Resumes.Count</span>
                </div>

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success mb-3">@successMessage</div>
                }
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger mb-3">@errorMessage</div>
                }

                @if (!Model.HasResumes)
                {
                    <div class="text-muted" style="font-size: 0.9rem;">Chưa có hồ sơ nào. Vui lòng tải lên PDF.</div>
                }
                else
                {
                    <div class="resume-list">
                        @foreach (var resume in Model.Resumes)
                        {
                            <div class="resume-item">
                                <div class="resume-info">
                                    <div class="resume-name">@resume.Name</div>
                                    <div style="font-size: 0.82rem; color: #6c757d;">@resume.OriginalFileName</div>
                                </div>
                                <div class="d-flex flex-wrap gap-2" style="min-width: 240px;">
                                    <a class="btn btn-outline-secondary btn-sm" href="#" aria-disabled="true" tabindex="-1">Xem (chưa hỗ trợ)</a>
                                    <a class="btn btn-outline-primary btn-sm" href="#" aria-disabled="true" tabindex="-1">Sửa (chưa hỗ trợ)</a>
                                    <form asp-action="DeleteResume" asp-controller="Candidate" method="post" class="d-inline" onsubmit="return confirm('Xóa hồ sơ này?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@resume.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">Xóa</button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-4">
            <div class="resume-card">
                <div class="section-title">Tải lên hồ sơ mới</div>

                <form asp-action="UploadResume" asp-controller="Candidate" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label" for="resumeName">Tên hồ sơ (bắt buộc)</label>
                        <input type="text"
                               class="form-control"
                               id="resumeName"
                               name="resumeName"
                               placeholder="VD: Senior Backend CV"
                               required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="resumeFile">Chọn tệp PDF</label>
                        <input type="file"
                               class="form-control"
                               id="resumeFile"
                               name="resumeFile"
                               accept=".pdf"
                               required />
                        <div class="form-text">
                            Chỉ chấp nhận PDF, tối đa 10MB.
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Tải lên</button>
                </form>
            </div>
        </div>
    </div>
</div>
