@model List<SWP391_Project.ViewModels.Candidate.AppliedJobVM>

@{
    ViewData["Title"] = "Việc làm đã ứng tuyển";
    Layout = "_Layout";
    var primaryColor = "#28a745"; 
}

<style>
    .resume-wrapper {
        padding: 1rem 0;
    }

    .resume-card {
        background: white;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        padding: 1.25rem;
        margin-bottom: 1.25rem;
    }

    .resume-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .resume-item {
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        padding: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.75rem;
        transition: all 0.2s;
    }

        .resume-item:hover {
            background: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            border-color: #c3e6cb;
        }

    .resume-info {
        flex: 1;
    }

    .resume-name {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.25rem;
        font-size: 1rem;
    }

    .resume-meta {
        font-size: 0.85rem;
        color: #6c757d;
    }

    .pdf-viewer-frame {
        width: 100%;
        height: 85vh;
        border: none;
        background-color: #525659;
    }
</style>

<div class="container resume-wrapper">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="resume-card">
                <div class="d-flex align-items-center justify-content-between mb-4 border-bottom pb-3">
                    <h5 class="fw-bold text-success mb-0">
                        <i class="fas fa-file-alt me-2"></i> Việc làm đã ứng tuyển
                    </h5>
                    <span class="badge bg-success text-white rounded-pill">@Model.Count</span>
                </div>

                @if (Model.Count == 0)
                {
                    <div class="text-center py-5">
                        <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" alt="Empty" style="width: 60px; opacity: 0.5" class="mb-3">
                        <p class="text-muted small">Bạn chưa ứng tuyển công việc nào.</p>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-sm mt-2">Tìm việc ngay</a>
                    </div>
                }
                else
                {
                    <div class="resume-list">
                        @foreach (var app in Model)
                        {
                            string safeUrl = app.ResumeUrl;
                            if (!string.IsNullOrEmpty(safeUrl) && !safeUrl.StartsWith("http"))
                            {
                                safeUrl = safeUrl.Replace("Candidate/", "").Replace("Candidate\\", "");

                                if (!safeUrl.StartsWith("/")) safeUrl = "/" + safeUrl.TrimStart('/');

                                if (!safeUrl.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase)) safeUrl += ".pdf";

                                var parts = safeUrl.Split('/');
                                for (int i = 0; i < parts.Length; i++)
                                {
                                    if (!string.IsNullOrEmpty(parts[i]))
                                        parts[i] = System.Net.WebUtility.UrlEncode(parts[i]);
                                }
                                safeUrl = string.Join("/", parts).Replace("+", "%20");
                            }

                            <div class="resume-item">
                                <div class="resume-info">
                                    <div class="resume-name">
                                        <a asp-controller="Job" asp-action="Detail" asp-route-id="@app.JobId" class="text-decoration-none text-dark">
                                            @app.JobTitle
                                        </a>
                                    </div>
                                    <div class="resume-meta">
                                        <span><i class="fas fa-building me-1"></i> @app.CompanyName</span>
                                        <span class="mx-2">•</span>
                                        <span class="text-success"><i class="fas fa-check-circle me-1"></i> Đã nộp: @app.AppliedDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>

                                <div class="d-flex flex-wrap gap-1 justify-content-end" style="min-width: 140px;">

                                    <a asp-controller="Job" asp-action="Detail" asp-route-id="@app.JobId"
                                       class="btn btn-outline-primary btn-sm"
                                       title="Cập nhật hồ sơ">
                                        <i class="fas fa-pen"></i>
                                    </a>

                                    @if (!string.IsNullOrEmpty(app.CoverLetter))
                                    {
                                        <button type="button" class="btn btn-outline-info btn-sm"
                                                data-bs-toggle="collapse"
                                                data-bs-target="#collapse-@app.JobId"
                                                title="Xem Cover Letter">
                                            <i class="fas fa-envelope-open-text"></i>
                                        </button>
                                    }
                                </div>
                            </div>

                            <div class="collapse mt-2" id="collapse-@app.JobId">
                                <div class="card card-body bg-light small fst-italic text-muted border-0 ms-3 p-2">
                                    <strong>Cover Letter:</strong> "@app.CoverLetter"
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openPdfPreview(url, title) {
            console.log("Opening URL:", url); 

            document.getElementById('previewTitle').textContent = 'CV: ' + title;

            document.getElementById('pdfFrame').src = url;

            document.getElementById('directLink').href = url;

            var modal = new bootstrap.Modal(document.getElementById('previewModal'));
            modal.show();
        }

        document.getElementById('previewModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('pdfFrame').src = "";
        });
    </script>
}