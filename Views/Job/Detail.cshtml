@model SWP391_Project.ViewModels.Jobs.JobDetailVM

@{
    ViewData["Title"] = Model.Title;
}

<section class="job-detail-section py-5">
    <div class="container">
        <div class="mb-3">
            <a href="javascript:history.back()" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Quay lại
            </a>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4 border">
                    <div class="card-body">
                        <div class="d-flex flex-column gap-3">
                            <h1 class="h3 fw-bold">@Model.Title</h1>
                            <div class="d-flex flex-wrap gap-3">
                                <div class="d-flex align-items-center gap-2 bg-white border rounded-3 px-3 py-2 shadow-sm">
                                    <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center" style="width: 42px; height: 42px;">
                                        <i class="fas fa-money-bill-wave"></i>
                                    </div>
                                    <div>
                                        <div class="text-muted small">Thu nhập</div>
                                        <div class="fw-semibold">@Model.SalaryText</div>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center gap-2 bg-white border rounded-3 px-3 py-2 shadow-sm">
                                    <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center" style="width: 42px; height: 42px;">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </div>
                                    <div>
                                        <div class="text-muted small">Địa điểm</div>
                                        <div class="fw-semibold">@Model.Location</div>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center gap-2 bg-white border rounded-3 px-3 py-2 shadow-sm">
                                    <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center" style="width: 42px; height: 42px;">
                                        <i class="fas fa-hourglass-half"></i>
                                    </div>
                                    <div>
                                        <div class="text-muted small">Kinh nghiệm</div>
                                        <div class="fw-semibold">@Model.Experience</div>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center gap-2 bg-white border rounded-3 px-3 py-2 shadow-sm">
                                    <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center" style="width: 42px; height: 42px;">
                                        <i class="fas fa-calendar-check"></i>
                                    </div>
                                    <div>
                                        <div class="text-muted small">Hạn nộp hồ sơ</div>
                                        <div class="fw-semibold">@Model.Deadline</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-2 mt-1">
                                <div class="col-12 col-md-9">
                                    @if (Model.HasApplied)
                                    {
                                        <a href="javascript:void(0)" onclick="openApplyModal(@Model.Id)"
                                           class="btn btn-warning w-100 d-flex justify-content-center align-items-center py-3 fw-semibold text-white">
                                            <i class="fas fa-redo me-2"></i> Ứng tuyển lại
                                        </a>
                                        <div class="text-center mt-2">
                                            <small class="text-muted"><i class="fas fa-check-circle text-success"></i> Bạn đã nộp hồ sơ cho công việc này.</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <a href="javascript:void(0)" onclick="openApplyModal(@Model.Id)"
                                           class="btn btn-success w-100 d-flex justify-content-center align-items-center py-3 fw-semibold">
                                            <i class="fas fa-paper-plane me-2"></i> Ứng tuyển ngay
                                        </a>
                                    }
                                </div>
                                <div class="col-12 col-md-3">
                                    <button id="btnSaveJob"
                                            onclick="toggleSaveJob(@Model.Id)"
                                            class="btn @(Model.IsSaved ? "btn-success" : "btn-outline-success") w-100 d-flex justify-content-center align-items-center py-3">
                                        <i class="fas @(Model.IsSaved ? "fa-check" : "fa-bookmark") me-2" id="iconSaveJob"></i>
                                        <span id="textSaveJob">@(Model.IsSaved ? "Đã lưu" : "Lưu tin")</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4 shadow-sm border">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="fw-semibold mb-0">Chi tiết tin tuyển dụng</h5>
                        </div>
                        <div class="mb-3">
                            <strong>Yêu cầu kỹ năng:</strong>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                @foreach (var skill in Model.Skills)
                                {
                                    <span class="badge bg-light text-success border border-success">@skill</span>
                                }
                            </div>
                        </div>
                        <div class="mb-3">
                            <strong>Ngành nghề:</strong>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                @foreach (var domain in Model.Domains)
                                {
                                    <span class="badge bg-light text-success border border-success">@domain</span>
                                }
                            </div>
                        </div>
                        <div class="job-detail-description mt-4 text-muted">
                            <h6 class="fw-semibold">Mô tả công việc</h6>
                            <div class="mb-0">@Html.Raw(Model.Description)</div>
                        </div>

                        <div class="mt-4 pt-3 border-top">
                            <div class="d-flex align-items-start gap-2">
                                <i class="fas fa-exclamation-circle text-danger mt-1"></i>
                                <div>
                                    <div class="fw-semibold text-dark">Báo cáo tin tuyển dụng</div>
                                    <div class="small text-muted">Nếu bạn thấy rằng tin tuyển dụng này không đúng hoặc có dấu hiệu lừa đảo, <a href="javascript:void(0)" class="text-danger fw-semibold" onclick="handleReportClick()">hãy phản ánh với chúng tôi.</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card mb-4 shadow-sm border">
                    <div class="card-body">
                        <div class="d-flex gap-3 align-items-center">
                            <div style="width: 96px; height: 96px;" class="flex-shrink-0">
                                <img src="@Model.CompanyImageUrl" alt="@Model.CompanyName" class="img-fluid rounded border w-100 h-100" style="object-fit: cover;" />
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="fw-semibold mb-1">
                                    <a class="text-decoration-none text-dark" asp-controller="Company" asp-action="Detail" asp-route-id="@Model.CompanyId">
                                        @Model.CompanyName
                                    </a>
                                </h6>
                                <div class="d-flex flex-wrap gap-1 mb-2">
                                    @foreach (var domain in Model.CompanyDomains.Take(2))
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success">@domain</span>
                                    }
                                </div>
                                <p class="small text-muted mb-2">@Model.CompanyAddress</p>
                                <a asp-controller="Company" asp-action="Detail" asp-route-id="@Model.CompanyId" class="text-success text-decoration-none fw-semibold">Xem trang công ty</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm border">
                    <div class="card-body">
                        <h6 class="fw-semibold mb-3">Thông tin chung</h6>
                        <ul class="list-unstyled small text-muted mb-0">
                            <li class="mb-2">
                                <i class="fas fa-users text-success me-2"></i>
                                Số lượng tuyển: @Model.VacancyCount
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-clock text-success me-2"></i>
                                Hình thức: @Model.JobType
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-map-marker-alt text-success me-2"></i>
                                Địa điểm: @Model.Location
                            </li>
                        </ul>
                    </div>
                </div>

                @if (Model.SimilarJobs != null && Model.SimilarJobs.Any())
                {
                    <div class="card shadow-sm border mt-3">
                        <div class="card-body">
                            <h6 class="fw-semibold mb-3">Việc làm tương tự</h6>
                            <div class="d-flex flex-column gap-3">
                                @foreach (var sj in Model.SimilarJobs)
                                {
                                    <a class="job-card-grid text-decoration-none text-dark border rounded-3 p-3" asp-controller="Job" asp-action="Detail" asp-route-id="@sj.Id">
                                        <div class="d-flex gap-3 align-items-start">
                                            <img class="job-card-grid__logo border rounded" src="@sj.CompanyImageUrl" alt="@sj.CompanyName" style="width: 56px; height: 56px; object-fit: cover;" />
                                            <div style="flex:1; min-width:0;">
                                                <h6 class="mb-1 fw-semibold">@sj.Title</h6>
                                                <div class="text-muted small">@sj.CompanyName</div>
                                                <div class="d-flex flex-wrap gap-2 mt-2 text-muted small">
                                                    <div class="d-flex align-items-center gap-1">
                                                        <i class="fas fa-money-bill-wave text-success"></i>
                                                        <span>@sj.SalaryText</span>
                                                    </div>
                                                    <div class="d-flex align-items-center gap-1">
                                                        <i class="fas fa-map-marker-alt text-success"></i>
                                                        <span>@sj.Location</span>
                                                    </div>
                                                    <div class="d-flex align-items-center gap-1">
                                                        <i class="fas fa-briefcase text-success"></i>
                                                        <span>@sj.Experience</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="modal fade" id="applyModalContainer" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content" id="applyModalContent">
            </div>
        </div>
    </div>

    <div class="modal fade" id="reportModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Báo cáo tin tuyển dụng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="reportForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="reportJobId" value="@Model.Id" />
                        <div class="mb-3">
                            <label class="form-label">Lý do</label>
                            <textarea id="reportReason" class="form-control" rows="4" placeholder="Nhập lý do báo cáo" required></textarea>
                        </div>
                        <div class="alert alert-info d-none" id="reportInfo"></div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-danger" onclick="submitReport()">Gửi báo cáo</button>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        const isCandidate = @(Model.IsCandidate.ToString().ToLower());
        let remainingReport = @Model.RemainingReport;
        let alreadyReported = @(Model.AlreadyReported.ToString().ToLower());
        const canReport = @(Model.CanReport.ToString().ToLower());

        function toggleSaveJob(jobId) {
            $.ajax({
                url: '@Url.Action("ToggleSaveJob", "Candidate")',
                type: 'POST',
                data: { jobId: jobId },
                success: function (response) {
                    // TRƯỜNG HỢP 1: Server trả về HTML trang đăng nhập (Do bị Redirect)
                    // -> Hiển thị Modal đăng nhập giống nút "Ứng tuyển ngay"
                    if (typeof response === 'string' && (response.includes("<!DOCTYPE html>") || response.includes("<html"))) {
                        $('#applyModalContent').html(response);
                        var modal = new bootstrap.Modal(document.getElementById('applyModalContainer'));
                        modal.show();
                        return;
                    }

                    // TRƯỜNG HỢP 2: Server trả về JSON (Đã đăng nhập)
                    if (response.success) {
                        var btn = $('#btnSaveJob');
                        var icon = $('#iconSaveJob');
                        var text = $('#textSaveJob');

                        if (response.isSaved) {
                            btn.removeClass('btn-outline-success').addClass('btn-success');
                            icon.removeClass('fa-check').addClass('fa-bookmark');
                            text.text('Đã lưu');
                        } else {
                            btn.removeClass('btn-success').addClass('btn-outline-success');
                            icon.removeClass('fa-bookmark').addClass('fa-check');
                            text.text('Lưu tin');
                        }
                    } else {
                        alert("Có lỗi: " + (response.message || "Lỗi không xác định"));
                    }
                },
                error: function (xhr) {
                    // TRƯỜNG HỢP 3: Server trả về đúng mã 401 (Nếu config API chuẩn)
                    if (xhr.status === 401) {
                        // Gọi lại endpoint lấy form đăng nhập để hiện modal
                        // (Giả sử bạn dùng chung cơ chế load modal của nút Apply)
                        $.get('@Url.Action("GetApplyModal", "Candidate")', { jobId: jobId }, function (html) {
                            $('#applyModalContent').html(html);
                            var modal = new bootstrap.Modal(document.getElementById('applyModalContainer'));
                            modal.show();
                        });
                    } else {
                        console.log(xhr.responseText);
                        alert("Lỗi kết nối server.");
                    }
                }
            });
        }

        function openApplyModal(jobId) {
            $.ajax({
                url: '@Url.Action("GetApplyModal", "Candidate")',
                type: 'GET',
                data: { jobId: jobId },
                success: function (res) {
                    $('#applyModalContent').html(res);
                    var modal = new bootstrap.Modal(document.getElementById('applyModalContainer'));
                    modal.show();
                },
                error: function (xhr) {
                    if (xhr.status === 401) {
                        if (confirm("Bạn cần đăng nhập để ứng tuyển. Đăng nhập ngay?")) {
                            window.location.href = "/Account/Login?returnUrl=" + encodeURIComponent(window.location.pathname);
                        }
                    } else {
                        alert("Có lỗi xảy ra: " + xhr.responseText);
                    }
                }
            });
        }

        function submitApplication() {
            var form = $('#applyJobForm');
            if (!form[0].checkValidity()) {
                form[0].reportValidity();
                return;
            }

            $.ajax({
                url: '@Url.Action("SubmitApplication", "Candidate")',
                type: 'POST',
                data: form.serialize(),
                success: function (res) {
                    if (res.success) {
                        var modalEl = document.getElementById('applyModalContainer');
                        var modal = bootstrap.Modal.getInstance(modalEl);
                        modal.hide();

                        alert(res.message);

                        location.reload();
                    } else {
                        alert("Lỗi: " + res.message);
                    }
                },
                error: function () {
                    alert("Lỗi kết nối đến server.");
                }
            });
        }

        function handleReportClick() {
            if (!isCandidate) {
                window.location.href = '@Url.Action("Login", "Account")?returnUrl=' + encodeURIComponent(window.location.href);
                return;
            }
            if (alreadyReported) {
                alert("Bạn đã báo cáo tin này trước đó.");
                return;
            }
            if (remainingReport <= 0) {
                alert("Bạn đã hết lượt báo cáo.");
                return;
            }
            $('#reportReason').val('');
            $('#reportInfo').addClass('d-none');
            const modal = new bootstrap.Modal(document.getElementById('reportModal'));
            modal.show();
        }

        function submitReport() {
            const reason = $('#reportReason').val().trim();
            if (!reason) {
                alert("Vui lòng nhập lý do.");
                return;
            }

            $.ajax({
                url: '@Url.Action("CreateReport", "Job")',
                type: 'POST',
                data: {
                    jobId: $('#reportJobId').val(),
                    reason: reason,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (res) {
                    if (res.requiresLogin) {
                        window.location.href = '@Url.Action("Login", "Account")?returnUrl=' + encodeURIComponent(window.location.href);
                        return;
                    }
                    if (res.success) {
                        alreadyReported = true;
                        remainingReport = Math.max(0, remainingReport - 1);
                        const modalEl = document.getElementById('reportModal');
                        const modal = bootstrap.Modal.getInstance(modalEl);
                        modal.hide();
                        alert(res.message || "Gửi báo cáo thành công");
                    } else {
                        $('#reportInfo').removeClass('d-none').text(res.message || "Không thể gửi báo cáo");
                    }
                },
                error: function () {
                    $('#reportInfo').removeClass('d-none').text("Có lỗi xảy ra, vui lòng thử lại");
                }
            });
        }
    </script>
}